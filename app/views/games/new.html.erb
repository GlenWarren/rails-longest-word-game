<div class="container p-5">
<h1>Games#new</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p> -->

<ul class="list-inline">
<% @letters.each do |letter| %>
<li class="list-inline-item border bg-warning p-4 rounded"><%= letter %></li>
<% end %>
</ul>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>

  <!-- <input type="hidden" name="grid" value="<%= @letters %>"> -->
  <input type="text" name="user_input">
  <input type="submit" value="What is the longest word you can find?">
</form>
</div>
